package 도서관리프로그램;

import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		while(true) {
			System.out.println("[1]도서등록 [2]도서조회 [3]도서검색 [4]종료");
			int select = sc.nextInt();
			if (select == 1) {
				// 도서등록
			} else if(select == 2) {
				// 도서조회
			
			} else if(select == 3) {
				// 도서검색
			} else if(select == 4) {
				// 종료
			} else {
				System.out.println("다시 입력해 주세요");
			}
			 
		}

	}

}
