package 게임만들기;

import java.util.Random;

public class PlusGame implements GameRule{
	
	int[] numArr = new int[10];
	int[] addNumArr = new int[5];
	String[] addArr = {"+", "-","*","%"};
	
	@Override
	public int random() {
		Random rand = new Random();
		
		for (int i = 0; i < 10; i++) {
			numArr[i] = rand.nextInt(1, 11);
		}
		
		
		for (int j = 0; j < 5; j++) {
			addNumArr[j] = rand.nextInt(0,4);
		}
		
		return 0;
	}

	@Override
	public String getQuizMsg() {
//		String[] arr = {"+", "-","*","%"};
//		for (int i = 0; i < 4; i++) {
//		
//		}
		for (int i = 0; i < 5; i++) {
			for (int j = 0; j < 9; j++) {
				System.out.print(numArr[j]+addNumArr[j]+numArr[j+1]+" = ");
				System.out.println();
			}
		}
		return null;
	}

	@Override
	public boolean checkAnswer(int ans) {
		
		return false;
	}

}
