package 뮤직플레이어;

import java.util.ArrayList;
import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		// 1.가수명(String) 2.노래제목(String) 3.발매년도(int) 4.시간(int)
		//////////////////////
		Music m1 = new Music("아이들","Queencard",2023,90);
		Music m2 = new Music("윤하","사건의 지평선",2023,45);
		Music m3 = new Music("임영웅","사랑은 늘 도망가",2023,90);
		Music m4 = new Music("야다","이미 슬픈 사랑",1997,90);
		Music m5 = new Music("체리필터","낭만고양이",2020,83);
		
		ArrayList<Music> list = new ArrayList<>();
		list.add(m1);
		list.add(m2);
		list.add(m3);
		list.add(m4);
		list.add(m5);

		while(true) {
			System.out.print("1.재생 2.정지 3.이전곡 4.다음곡 5.목록 6.종료 >> ");
			int menu = sc.nextInt();
			
			if (menu == 1) {
				
			} else if (menu == 2) {
				
			} else if (menu == 3) {
				
			} else if (menu == 4) {
				System.out.println("===========다음곡============");
				
			} else if (menu == 5) {
				System.out.println("============목록============");
				for (int i = 0; i <list.size(); i++) {
					System.out.println(
						(i+1)+". "+list.get(i).getSinger()+"-"
						+list.get(i).getTitle()+"("+list.get(i).getTime()+"초)");
				}
				System.out.println("===========================");
			
			} else if (menu == 6) {
				System.out.println("프로그램을 종료합니다.");
				break;
				
			}
		}
		sc.close();
	}

}
